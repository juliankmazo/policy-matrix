<div class="panel-body">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <form>
        <h6 style="color:red">{{errorMessage}}</h6>
        <div class="row">
          <div class="col-lg-11">
            <div class="form-horizontal" >
              <label class="col-sm-3 control-label">Variable Name:</label>
              <div class="col-sm-9">
                {{input value=model.name type="text" placeholder="Write the name of the variable" class="form-control m-5"}}
              </div>
              <label class="col-sm-3 control-label">Type:</label>
              <div class="col-sm-9">
                {{view "select" content=typeOptions prompt="Select category of the variable" class="form-control m-5" selection=model.tipo}}
              </div>
              <label class="col-sm-3 control-label">Description:</label>
              <div class="col-sm-9">
                {{textarea value=model.description rows=2 placeholder="Add a description for this variable" class="form-control m-5"}}
              </div>
            </div>
          </div>
        </div>
        <br>
        <br>
        <div class="row">
          <div class="col-lg-5">
            <div class="row">
              <div class="col-lg-12">
                <form class="form-inline" {{action "addKeyword" on="submit"}}>
                  <div class="col-xs-7 form-np">
                    {{input value=model.keyword.name type="text" placeholder="Keyword" class="form-control m-5"}}
                  </div>
                  <div class="col-xs-4 col-xs-offset-1 button-np">
                    <input type="submit" class="btn btn-primary-blue pull-right" style="padding:5px 6px;" value="Add New Keyword"/>
                  </div>
                  <div class="col-xs-12 form-np button-np">
                    {{textarea value=model.keyword.description rows=2 placeholder="Definition (optional)" class="form-control m-5"}}
                  </div>
                </form>
              </div>
            </div>
            <div class="panel panel-primary-blue">
              <div class="panel-heading">
                <h3 class="panel-title">Variable Keywords</h3>
              </div>
              <div class="panel-body">
                <div class="list-group text-center">
                  <span class="badge">Cooperative</span>
                  <span class="badge">farmer based organization</span> 
                  <span class="badge">Producer Organizations</span> 
                  <span class="badge">Pooling</span>
                  <span class="badge">Federations</span> 
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-7 ">
            <div class="panel panel-primary-blue">
              <div class="panel-heading">
                <h3 class="panel-title"></i> Basic Definitions</h3>
              </div>
              <div class="panel-body">
                <div class="table-responsive">
                  <table class="table table-bordered table-hover table-striped">
                    <thead>
                      <tr>
                        <th>Concept</th>
                        <th>Definition</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td><strong>Governance</strong></td>
                        <td>It relates to "the processes of interaction and decision-making among the actors involved in a collective problem that lead to the creation, reinforcement, or reproduction of social norms and institutions.</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-11 text-center">
          <div class="row">        
            <button {{action "save"}} class="btn btn-primary-blue" style="margin:15px;">Save Changes</button>
            <button {{action "cancel"}} class="btn btn-default" style="margin:15px;">Cancel</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
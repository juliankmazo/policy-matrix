<ul>
	<li>Study Title: {{model.title}}</li>
	<li>Country: {{model.country}}</li>
	<li>Id: {{model.id}}</li>
</ul>

{{outlet}}
<!-- Page Heading -->
<div class="row">
  <div class="col-lg-11">
    <h3>
      Add New Policy or Program
    </h3>
    <p class="bg-primary-blue text-center">P&P Information</p>
  </div>
</div>
<!-- /.row -->
<form {{action "save" on="submit"}}>
  <h6 style="color:red">{{errorMessage}}</h6>
  <div class="row">
    <div class="col-lg-11">
      <div class="form-horizontal" >
      	<label class="col-sm-3 control-label">Country:</label>
        <div class="col-sm-9">
          {{view "select" content=countryOptions prompt="Select a country" class="form-control m-5"}}
        </div>
        <label class="col-sm-3 control-label">P&P Title:</label>
        <div class="col-sm-9">
          {{input value=model.name type="text" placeholder="Write the title of the policy or program" class="form-control m-5"}}
        </div>
        <label class="col-sm-3 control-label">General information:</label>
        <div class="col-sm-9">
          {{textarea value=model.description rows=2 placeholder="Add general information" class="form-control m-5"}}
        </div>
        <label class="col-sm-3 control-label">Contact person:</label>
        <label class="col-sm-1 control-label">Name:</label>
        <div class="col-sm-3">
          {{input value=model.description type="text" placeholder="Name" class="form-control m-5"}}
        </div>
        <label class="col-sm-1 control-label">Email:</label>
        <div class="col-sm-4">
          {{input value=model.description type="text" placeholder="Name" class="form-control m-5"}}
        </div>
        <label class="col-sm-1 col-sm-offset-3 control-label">Job:</label>
        <div class="col-sm-3">
          {{input value=model.description type="text" placeholder="Name" class="form-control m-5"}}
        </div>
        <label class="col-sm-1 control-label">Number:</label>
        <div class="col-sm-4">
          {{input value=model.description type="text" placeholder="Name" class="form-control m-5"}}
        </div>
        <label class="col-sm-3 control-label">Typology:</label>
        <div class="col-sm-9">
          {{view "select" content=typologyOptions prompt="Select a typology" class="form-control m-5"}}
        </div>
        <label class="col-sm-3 control-label">Regulatory Framework:</label>
        <div class="col-sm-4">
          {{view "select" content=typologyOptions prompt="Select an option" class="form-control m-5"}}
        </div>
        <label class="col-sm-1 control-label">Reference:</label>
        <div class="col-sm-4">
          {{input value=model.description type="text" placeholder="Define details" class="form-control m-5"}}
        </div>
        <label class="col-sm-3 control-label">Relations with others P&P:</label>
        <label class="col-sm-1 control-label">P&P:</label>
        <div class="col-sm-3">
          {{view "select" content=typologyOptions prompt="Select an existing P&P" class="form-control m-5"}}
        </div>
        <label class="col-sm-1 control-label">Relation:</label>
        <div class="col-sm-4">
          {{view "select" content=typologyOptions prompt="Select relationship" class="form-control m-5"}}
        </div>
        <label class="col-sm-3 control-label">Beneficiaries:</label>
        <div class="col-sm-9">
          {{input value=model.description type="text" placeholder="Add beneficiaries" class="form-control m-5"}}
        </div>
        <label class="col-sm-3 control-label">Geographical coverage:</label>
        <div class="col-sm-4">
          {{view "select" content=typologyOptions prompt="Select coverage" class="form-control m-5"}}
        </div>
        <label class="col-sm-1 control-label">Specify:</label>
        <div class="col-sm-4">
          {{input value=model.description type="text" placeholder="Write the name of the place or region" class="form-control m-5"}}
        </div>
        <label class="col-sm-3 control-label">Date of entry into force:</label>
        <div class="col-sm-4">
          {{input value=model.description type="text" placeholder="Starting date" class="form-control m-5"}}
        </div>
        <label class="col-sm-1 control-label">Timeframe:</label>
        <div class="col-sm-4">
          {{input value=model.description type="text" placeholder="Define the interval" class="form-control m-5"}}
        </div>
        <label class="col-sm-3 control-label">Total Budget:</label>
        <div class="col-sm-4">
          {{input value=model.description type="number" placeholder="Define the amount of money" class="form-control m-5"}}
        </div>
        <label class="col-sm-1 control-label">Currency:</label>
        <div class="col-sm-4">
          {{view "select" content=typologyOptions prompt="Select the money currency" class="form-control m-5"}}
        </div>
        <label class="col-sm-3 control-label">Comments:</label>
        <div class="col-sm-9">
          {{textarea value=model.description rows=2 placeholder="Write any comment or observation" class="form-control m-5"}}
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-lg-11 text-center">
    <div class="row">        
      <input  class="btn btn-primary-blue" style="margin:15px;" type="submit" value="Save Changes"/>
      <button {{action "cancel"}} class="btn btn-default" style="margin:15px;">Cancel</button>
    </div>
  </div>
</form>

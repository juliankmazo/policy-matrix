 <div class="panel-body">
  <form {{action "save" on="submit"}}>
    <h6 style="color:red">{{errorMessage}}</h6>
    <div class="row">
      <div class="col-lg-11">
        <div class="form-horizontal" >
          <label class="col-sm-3 control-label">Country:</label>
          <div class="col-sm-9 m-5">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1"><span {{bind-attr class="flagClass :flag-icon"}}></span></span>
              {{view "select" content=countryOptions optionValuePath="content.id" optionLabelPath="content.name" prompt="Select a country" class="form-control m-5" value=model.country selection=selectedObject}}
            </div>
          </div>
          <label class="col-sm-3 control-label">P&P Title:</label>
          <div class="col-sm-9">
            {{input value=model.title type="text" placeholder="Write the title of the policy or program" class="form-control m-5"}}
          </div>
          <label class="col-sm-3 control-label">Description:</label>
          <div class="col-sm-9">
            {{textarea value=model.description rows=2 placeholder="Add general information" class="form-control m-5"}}
          </div>
          <label class="col-sm-3 control-label">Contact person:</label>
          <label class="col-sm-1 control-label">Name:</label>
          <div class="col-sm-3">
            {{input value=model.contactPerson type="text" placeholder="Name" class="form-control m-5"}}
          </div>
          <label class="col-sm-1 control-label">Email:</label>
          <div class="col-sm-4">
            {{input type="text" placeholder="Name" class="form-control m-5"}}
          </div>
          <label class="col-sm-1 col-sm-offset-3 control-label">Job:</label>
          <div class="col-sm-3">
            {{input type="text" placeholder="Name" class="form-control m-5"}}
          </div>
          <label class="col-sm-1 control-label">Number:</label>
          <div class="col-sm-4">
            {{input type="text" placeholder="Name" class="form-control m-5"}}
          </div>
          <label class="col-sm-3 control-label">Typology:</label>
          <div class="col-sm-9">
            {{view "select" content=typologyOptions prompt="Select a typology" class="form-control m-5" selection=model.typology}}
          </div>
          <label class="col-sm-3 control-label">Regulatory Framework:</label>
          <div class="col-sm-4">
            {{view "select" content=rFrameworkOptions prompt="Select an option" class="form-control m-5" selection=model.regulatoryFramework}}
          </div>
          <label class="col-sm-1 control-label">Reference:</label>
          <div class="col-sm-4">
            {{input value=model.regulatoryFrameworkReference type="text" placeholder="Define details" class="form-control m-5"}}
          </div>
          <label class="col-sm-3 control-label">Beneficiaries:</label>
          <div class="col-sm-9">
            {{input value=model.beneficiaries type="text" placeholder="Add beneficiaries" class="form-control m-5"}}
          </div>
          <label class="col-sm-3 control-label">Geographical coverage:</label>
          <div class="col-sm-4">
            {{view "select" content=gCoverageOptions prompt="Select coverage" class="form-control m-5" selection=model.geographicalCoverage}}
          </div>
          <label class="col-sm-1 control-label">Specify:</label>
          <div class="col-sm-4">
            {{input value=model.geographicalPlace type="text" placeholder="Write the name of the place or region" class="form-control m-5"}}
          </div>
          <label class="col-sm-3 control-label">Date of entry into force:</label>
          <div class="col-sm-4">
            {{input value=model.dateEntry type="text" placeholder="Starting date" class="form-control m-5"}}
          </div>
          <label class="col-sm-1 control-label">Timeframe:</label>
          <div class="col-sm-4">
            {{input value=model.timeFrame type="text" placeholder="Define the interval" class="form-control m-5"}}
          </div>
          <label class="col-sm-3 control-label">Total Budget:</label>
          <div class="col-sm-4">
            {{input value=model.totalBudget type="number" placeholder="Define the amount of money" class="form-control m-5"}}
          </div>
          <label class="col-sm-1 control-label">Currency:</label>
          <div class="col-sm-4">
            {{view "select" content=currencyOptions optionValuePath="content.id" optionLabelPath="content.name" prompt="Select the money currency" class="form-control m-5" selection=model.currency}}
          </div>
          <label class="col-sm-3 control-label">Comments:</label>
          <div class="col-sm-9">
            {{textarea value=model.comments rows=2 placeholder="Write any comment or observation" class="form-control m-5"}}
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-11 text-center">
      <div class="row">        
        <input  class="btn btn-primary-blue" style="margin:15px;" type="submit" value="Save Information"/>
        <button {{action "cancel"}} class="btn btn-default" style="margin:15px;">Cancel</button>
      </div>
    </div>
  </form>
</div>
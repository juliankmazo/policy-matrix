<div class="panel panel-primary-blue">
  <div class="panel-heading">
    <h3 class="panel-title">{{#link-to 'policies'}}<span class="glyphicon glyphicon-chevron-left"></span>{{/link-to}} General Information</h3>
  </div>
  <div class="panel-body">
  <p class="bg-primary-blue text-center" style="margin:0px -15px 15px -15px">General Information</p>
  	<dl class="dl-horizontal">

  		<dt>Description:</dt>
		  <dd>{{model.description}}</dd>

		  <dt>Contact person:</dt>
		  <dd>{{model.contactPerson}}</dd>

		  <dt>Typology:</dt>
		  <dd>{{model.typology}}</dd>

		  <dt>Regulatory Framework:</dt>
		  <dd>{{model.regulatoryFramework}}</dd>

		  <dt>Reference:</dt>
		  <dd>{{model.regulatoryFrameworkReference}}</dd>

		  <dt>P&P Parents:</dt>
		  <dd>{{model.parents}}</dd>

		  <dt>P&P Childrens:</dt>
		  <dd>{{model.childrens}}</dd>

		  <dt>Beneficiaries:</dt>
		  <dd>{{model.beneficiaries}}</dd>

		  <dt>Geographical coverage:</dt>
		  <dd>{{model.geographicalCoverage}}</dd>

		  <dt>Specify:</dt>
		  <dd>{{model.geographicalPlace}}</dd>

		  <dt>Date of entry into force:</dt>
		  <dd>{{model.dateEntry}}</dd>

		  <dt>Timeframe:</dt>
		  <dd>{{model.timeFrame}}</dd>

		  <dt>Total Budget:</dt>
		  <dd>{{model.totalBudget}}</dd>

		  <dt>Currency:</dt>
		  <dd>{{model.currency}}</dd>

		  <dt>Comments:</dt>
		  <dd>{{model.comments}}</dd>
		</dl>
		<p class="bg-primary-blue text-center" style="margin:0px -15px 15px -15px">Technical Information</p>
		<dl class="dl-horizontal">
			<dt>Objectives:</dt>
		  <dd>
		  	<ul>
			    {{#each objective in model.objectives}}
			    	<li>{{objective.title}}</li>
			    {{/each}}
		    </ul>
		  </dd>
		</dl>
	</div>
</div>
<div class="row">
	<div class="col-sm-4 col-sm-offset-2">
		{{#link-to 'policy.edit' class="btn btn-primary-blue btn-lg btn-block"}}<span class="glyphicon glyphicon-pencil"></span>  Edit General Information {{/link-to}}
	</div>
	<div class="col-sm-4">
		{{#link-to 'objectives' class="btn btn-primary-blue btn-lg btn-block"}}<span class="glyphicon glyphicon-pencil"></span>  Edit Technical Information {{/link-to}}
	</div>
</div>
<br>
<br>

{{liquid-outlet}}

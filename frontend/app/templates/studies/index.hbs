<h1>Previous Studies</h1>

<h4>Total created studies: {{model.length}}</h4>

{{#each study in model}}

<ul> 
	{{#link-to 'study' study}}		
		<li><strong>ID: </strong>{{study.id}}</li>
	{{/link-to}} 
		<li><strong>Title: </strong>{{study.title}}</li>
		<li><strong>Variables: </strong></li>
		<ol>
		  {{#each variable in study.variables}}
		    <li>{{variable.name}}</li>
		  {{/each}}
		</ol>
		<li><strong>Policies & Programs: </strong></li>
		<ul>
		  {{#each pyp in study.pyps}}
		    <li><span {{bind-attr class=pyp.flagClass}}></span> - {{pyp.title}}</li>
		  {{/each}}
		</ul>
</ul>
	{{#link-to 'study.matrix' study class="btn btn-orangeish" style="margin:15px;"}} <i class="fa fa-fw fa-th"></i>{{/link-to}}
	{{#link-to 'study.edit' study class="btn btn-primary-blue" style="margin:15px;"}} <i class="fa fa-fw fa-edit"></i>{{/link-to}}
	<button {{action "delete" study}} class="btn btn-danger"><i class="fa fa-fw fa-trash"></i></button>
	<br>
{{/each}}

{{liquid-outlet}}